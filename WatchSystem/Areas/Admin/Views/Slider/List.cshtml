@{
	Layout = "_AdminLayout";
}
@model List<SliderDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Slider List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Slider" asp-action="Edit" asp-area="Admin" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i>  @ActionsResources.Create
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th> Slider Name </th>
					<th> desctiption </th>
					<th> images </th>

					<th>Display Order</th>


					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td>@obj.Title</td>
						<td> @Html.Raw(obj.Description ) </td>
						<td><img src="~/uploads/Images/@obj.ImagePath" width="50px" /></td>
						<td>
							@obj.DisplayOrder
						</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Slider" asp-action="Edit" asp-area="Admin" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a  onclick="Delete('@Url.Action("Delete", "Slider", new { id = obj.Id, area = "Admin" })')" class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>
@section Scripts {


	<script>
	    function Delete(url) {
			Swal.fire({
				title: '@NotifiAndAlertsResources.AreYouSure',
				text: "YouWontBeAbleToRevertThis",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: '@ActionsResources.ok',
				cancelButtonText: '@ActionsResources.Cancel'
			}).then((result) => {
				if (result.isConfirmed) {
					window.location.href = url;
				}
			})
		}
	</script>
}


