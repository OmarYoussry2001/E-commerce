@{
	Layout = "_AdminLayout";
}
@model List<SettingsDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@SystemResources.SettingsList</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th> @FormResources.Name</th>
                        <th> @SystemResources.Logo </th>
                        <th> @SystemResources.FacebookLink </th>
                        <th> @SystemResources.InstagramLink </th>
                        <th> @SystemResources.TwitterLink </th>
                        <th> @SystemResources.YoutubeLink ss</th>
                        <th> @SystemResources.Address </th>
                        <th> @SystemResources.ContactNumber </th>
                        <th> @SystemResources.Fax </th>
                        <th> @SystemResources.Email </th>


        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.WebsiteName</td>
                            <td><img src="~/uploads/Images/@obj.Logo" width="50px" /></td>
                            <td>@obj.FacebookLink</td>
                            <td>@obj.InstagramLink</td>
                            <td>@obj.TwitterLink</td>
                            <td>@obj.YoutubeLink</td>
                            <td>@obj.Address</td>
                            <td>@obj.ContactNumber</td>
                            <td>@obj.Fax</td>
                            <td>@obj.Email</td>
                         
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Settings" asp-action="Edit" asp-area="Admin" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> @ActionsResources.Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

	</div>
</div>


