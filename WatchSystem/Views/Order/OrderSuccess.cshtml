
@model ShoppingCartIGeneral

<!-- Thank You Section -->
<section class="section-b-space light-layout">
	<div class="container">
		<div class="row justify-content-center text-center">
			<div class="col-md-8">
				<div class="alert alert-success" role="alert">
					<i class="fa fa-check-circle" aria-hidden="true"></i>
					<h2>@GeneralResources.ThankYou</h2>
					<p>@SystemResources.InvoiceIsSuccessfullyProcessedAndYourOrderIsOnTheWay</p>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Order Details -->
<section class="section-b-space">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header bg-dark text-white">
						<h3>@SystemResources.YourOrderDetails</h3>
					</div>
					<div class="card-body">
						@foreach (var item in Model.ShoppingCartItems)
						{
							<div class="row align-items-center border-bottom py-3">
								<div class="col-md-3">
									<img src="~/uploads/Images/@item.ImagePath" alt="Product Image" class="img-fluid">
								</div>
								<div class="col-md-3">
									<h4>@FormResources.Name</h4>
									<p>@item.ItemName</p>
								</div>
								<div class="col-md-3">
									<h4>@SystemResources.Quantity</h4>
									<p>@item.Qty</p>
								</div>
								<div class="col-md-3">
									<h4>@FormResources.Price</h4>
									<p class="text-success">$@item.Price</p>
								</div>
							</div>
						}
					</div>
					<div class="card-footer bg-light text-right">
						<h3>@SystemResources.total: <span class="text-success">$@Model.Total</span></h3>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>