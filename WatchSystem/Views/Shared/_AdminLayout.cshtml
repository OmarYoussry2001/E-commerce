<!DOCTYPE html>
<html lang="ar">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title> @SystemResources.WatchSystem</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/WatchSystem.styles.css" asp-append-version="true" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

	<link rel="stylesheet" href="https://cdn.datatables.net/2.3.1/css/dataTables.dataTables.min.css" />



</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@SystemResources.WatchSystem</a>
			
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								@SystemResources.ContentManagement
							</a>
							<ul class="dropdown-menu">
								<li> <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Item" asp-action="List">@SystemResources.Product</a> </li>
								<li> <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Slider" asp-action="List">@SystemResources.Slider</a> </li>
								<li> <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Type" asp-action="List">@SystemResources.Type</a></li>
								<li> <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Settings" asp-action="List">@SystemResources.SettingsList</a></li>

								
								<li> <a class="dropdown-item text-dark" href="/Account/Register">@SystemResources.CreateAccount</a></li>

								<li><hr class="dropdown-divider"></li>
							</ul>
						</li>



						<li class="nav-item">
							<a class="nav-link text-dark" href="/Home/Index">@SystemResources.Home</a>
						</li>
					
						<li class="nav-item">
							<i id="changeLangBtn" class="bi bi-translate" style="cursor:pointer;" title="Change Language"></i>
						</li>

					</ul>
				</div>
				<partial name="_LoginPartial">

			</div>


		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@* <partial name="_Notification" />  *@
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - @SystemResources.WatchSystem -
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>


	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
	<partial name="_Notification" />
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script>
		$(document).ready(function() {
			$('#changeLangBtn').on('click', function () {
				$.ajax({
					url: '@Url.Action("Localization", "Home", new { area = "Admin" })',
					type: 'POST',
					success: function () {
						location.reload();
					}
				});
			});
		});
	</script>





	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
