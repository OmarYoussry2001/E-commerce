
@model VmItemDetails
<!-- breadcrumb start -->
<div class="breadcrumb-section">
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<div class="page-title">
					<h2>@SystemResources.Product</h2>
				</div>
			</div>
			<div class="col-sm-6">
				<nav aria-label="breadcrumb" class="theme-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active" aria-current="page">@SystemResources.Home</li>
						<li class="breadcrumb-item active" aria-current="page">@SystemResources.Product</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- breadcrumb End -->
<!-- section start -->
<section>
	<div class="collection-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="product-slick">
						<div>
							<img src="~/uploads/Images/@Model.Item.ImagePathBackGround" alt=""
							class="img-fluid blur-up lazyload image_zoom_cls-0">
						</div>

					</div>
					<div class="row">
						<div class="col-12 p-0">
							<div class="slider-nav">
								@foreach (var item in Model.Images)
								{
									<div>
										<img src="~/uploads/Images/@item.ImagePath" alt=""
										class="img-fluid blur-up lazyload">
									</div>
								}


							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6 rtl-text">
					<div class="product-right">
						<h2 class="mb-0">	@Model.Item.Title</h2>
						<h5 class="mb-2">@SystemResources.By <a href="#">zara</a></h5>
						@{
							var DiscountPrice = Helper.CalculateDiscount(Model.Item.Price, Model.Item.DiscountPercent);
							var Result = Math.Round(DiscountPrice, 2);
						}
						<h4><del>$@Model.Item.Price</del><span>	@Model.Item.DiscountPercent% off</span></h4>
						<h3>$@Result</h3>
						<ul class="color-variant">
							<li class="bg-light0"></li>
							<li class="bg-light1"></li>
							<li class="bg-light2"></li>
						</ul>
					
						<div class="product-buttons">
							<a href="/Order/AddToCart?id=@Model.Item.Id"
							   class="btn btn-solid">@SystemResources.AddToCart</a>
						</div>
						<div class="border-product">
							<h6 class="product-title">@GeneralUIResources.Details</h6>
							<p>
								@Html.Raw(Model.Item.BenefitDescription)
							</p>
						</div>
						<div class="border-product">
							<h6 class="product-title">@SystemResources.ShareIt</h6>
							<div class="product-icon">
								<ul class="product-social">
									<li><a href="#"><i class="fa fa-facebook"></i></a></li>
									<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
									<li><a href="#"><i class="fa fa-twitter"></i></a></li>
									<li><a href="#"><i class="fa fa-instagram"></i></a></li>
									<li><a href="#"><i class="fa fa-rss"></i></a></li>
								</ul>
							
							</div>
						</div>
					
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Section ends -->
<!-- product-tab starts -->
<section class="tab-product m-0">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-lg-12">
				<ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">
					<li class="nav-item">
						<a class="nav-link active" id="top-home-tab" data-toggle="tab"
						   href="#top-home" role="tab" aria-selected="true">@FormResources.Description</a>
						<div class="material-border"></div>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="profile-top-tab" data-toggle="tab"
						   href="#top-profile" role="tab" aria-selected="false">@GeneralUIResources.Details</a>
						<div class="material-border"></div>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="contact-top-tab" data-toggle="tab"
						   href="#top-contact" role="tab" aria-selected="false">@SystemResources.Video</a>
						<div class="material-border"></div>
					</li>
				
				</ul>
				<div class="tab-content nav-material" id="top-tabContent">
					<div class="tab-pane fade show active" id="top-home" role="tabpanel"
						 aria-labelledby="top-home-tab">
						
						<p> @Html.Raw(Model.Item.BenefitDescription)</p>
					</div>
					<div class="tab-pane fade" id="top-profile" role="tabpanel" aria-labelledby="profile-top-tab">
						<p>.</p>
						<div class="single-product-tables">
							<table>
								<tbody>
									<tr>
										<td>@SystemResources.SerialNo</td>
										<td>@Model.Item.SerialNo</td>
									</tr>
									<tr>
										<td>@SystemResources.Color</td>
										<td>@Model.Item.Color</td>
									</tr>

								</tbody>
							</table>
							<table>
								<tbody>
									<tr>
										<td>@SystemResources.Quality</td>
										<td> @Model.Item.Quality</td>
									</tr>
									<tr>
										<td>@SystemResources.Size</td>
										<td>@Model.Item.Size/td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="tab-pane fade" id="top-contact" role="tabpanel" aria-labelledby="contact-top-tab">
						<div class="mt-4 text-center">
							<iframe width="560" height="315" src="https://www.youtube.com/embed/BUWzX78Ye_8"
									allow="autoplay; encrypted-media" allowfullscreen></iframe>
						</div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</section>
<!-- product-tab ends -->
<!-- product section start -->
<section class="section-b-space ratio_asos">
	<div class="container">
		<div class="row">
			<div class="col-12 product-related">
				<h2>@SystemResources.RelatedProducts</h2>
			</div>
		</div>
		<div class="row search-product">

			@foreach (var item in Model.RelatedItems)
			{
				<div class="col-xl-2 col-md-4 col-sm-6">
					<div class="product-box">
						<div class="img-wrapper">
							<div class="front">
								<a href="/Item/ItemDetails?id=@item.Id">
									<img src="~/uploads/Images/@item.ImagePathBackGround"
										 class="img-fluid blur-up lazyload bg-img" alt="">
								</a>
							</div>
							<div class="back">
								<a href="/Item/ItemDetails?id=@item.Id">
									<img src="~/assets/images/pro3/34.jpgs"
										 class="img-fluid blur-up lazyload bg-img" alt="">
								</a>
							</div>
							<div class="cart-info cart-wrap">
								<button data-toggle="modal" data-target="#addtocart" title="Add to cart">
									<i class="ti-shopping-cart"></i>
								</button> <a href="javascript:void(0)"
									  title="Add to Wishlist"><i class="ti-heart" aria-hidden="true"></i></a> <a href="#"
																						 data-toggle="modal" data-target="#quick-view" title="Quick View">
									<i class="ti-search" aria-hidden="true"></i>
								</a> <a href="compare.html"
								 title="Compare"><i class="ti-reload" aria-hidden="true"></i></a>
							</div>
						</div>
						<div class="product-detail">
							<div class="rating">
								<i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
							</div>
							<a href="product-page(no-sidebar).html">
								<h6>@item.Title</h6>
							</a>
							<h4>$@item.Price</h4>
							<ul class="color-variant">
								<li class="bg-light0"></li>
								<li class="bg-light1"></li>
								<li class="bg-light2"></li>
							</ul>
						</div>
					</div>
				</div>
			}


		</div>
	</div>
</section>
<!-- product section end -->
