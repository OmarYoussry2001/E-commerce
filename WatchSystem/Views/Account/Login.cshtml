
@model LoginDto
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>@ActionsResources.Login</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">@GeneralUIResources.Home</a></li>
                        <li class="breadcrumb-item active">@ActionsResources.Login</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="login-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3>@ActionsResources.Login</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post"
                          asp-controller="Account" asp-action="Login">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="@UserResources.EmailPlaceholder" required="">
                            <span asp-validation-for="Email" class="text-danger small"></span>

                        </div>

                        <div class="form-group">
                            <div class="d-flex align-items-center">
                                <div class="form-check me-2">
                                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe" style="width: 18px; height: 18px; margin-top: 0;">
                                    <label class="form-check-label" for="rememberMe"></label>

                                </div>
                                <label for="rememberMe" class="mb-0" style="cursor: pointer;">
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input  asp-for="Password" type="password" class="form-control" id="review"
                                   placeholder="@UserResources.PasswordPlaceholder" required="">
                            <span asp-validation-for="Password" class="text-danger small"></span>

                        </div><button type="submit" class="btn btn-solid">@ActionsResources.Login</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 right-login">
                <h3>@SystemResources.NewAccount</h3>
                <div class="theme-card authentication-right">
                    <h6 class="title-font">@ActionsResources.Create</h6>
                    <p>
                        @SystemResources.SignUpForFreeAccountAtOurStoreRegistrationIsQuickAndEasyItAllowsYouToOrderFromOurShopToStartShoppingClickRegister
                    </p><a href="/Account/Register"
                           class="btn btn-solid">@SystemResources.CreateAccount</a>
                </div>
            </div> 
        </div>
    </div>
</section>
<!--Section ends-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
